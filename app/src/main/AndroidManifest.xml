<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.lostboxen.udacity.popularmovies">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="net.lostboxen.udacity.popularmovies.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.lostboxen.udacity.popularmovies.MovieDetailActivity"
            android:label="@string/title_activity_movie_detail"
            android:parentActivityName="net.lostboxen.udacity.popularmovies.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.lostboxen.udacity.popularmovies.MainActivity" />
        </activity>
        <activity
            android:name="net.lostboxen.udacity.popularmovies.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="net.lostboxen.udacity.popularmovies.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.lostboxen.udacity.popularmovies.MainActivity" />
        </activity>
    </application>

</manifest>
